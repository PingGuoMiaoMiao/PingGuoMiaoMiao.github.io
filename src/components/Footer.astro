---
import Social from './Social.astro';
---

<footer class="neo-footer">
  <div class="neo-footer-content">
    <p>(๑¯ω¯๑) PingGuoMiaoMiao 的 <Social platform="github" username="PingGuoMiaoMiao" /></p>
    <small>© {new Date().getFullYear()} PingGuoMiaoMiao. 保留所有权利。</small>
  </div>
</footer>

<style>
  .neo-footer {
    margin-top: 3rem;
    padding: 2rem 1rem;
    border-top: 4px solid var(--neo-black);
    background: rgba(248, 248, 248, 0.95);
    backdrop-filter: blur(10px);
    position: relative;
    z-index: 1;
  }
  
  .neo-footer-content {
    max-width: 960px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    text-align: center;
  }
  
  .neo-footer p,
  .neo-footer small {
    color: var(--neo-black);
    margin: 0;
  }
  
  .neo-footer a {
    color: var(--neo-black);
    font-weight: 700;
  }
  
  .neo-footer a:hover {
    color: var(--neo-primary-dark);
  }
  
  @media (max-width: 768px) {
    .neo-footer {
      padding: 1.5rem 0.75rem;
      margin-top: 2rem;
      border-width: 3px;
    }
    
    .neo-footer-content {
      gap: 0.4rem;
    }
    
    .neo-footer p {
      font-size: 0.9rem;
    }
    
    .neo-footer small {
      font-size: 0.8rem;
    }
  }
  
  @media (max-width: 480px) {
    .neo-footer {
      padding: 1rem 0.5rem;
      margin-top: 1.5rem;
    }
    
    .neo-footer p {
      font-size: 0.85rem;
    }
    
    .neo-footer small {
      font-size: 0.75rem;
    }
  }
</style>
