  .search-btn:hover {
    transform: translate(-2px, -2px);
    box-shadow: 6px 6px 0 var(--neo-black);
  }
  
  @media (max-width: 1024px) {
    .sidebar {
      transform: translateX(-100%);
    }
    
    .sidebar.open {
      transform: translateX(0);
    }
  }
</style>

